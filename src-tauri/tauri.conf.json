{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "aios app",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../aios-frontend/dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "AIOS",
        "url": "index.html",
        "fullscreen": true,
        "decorations": false,
        "resizable": true,
        "capabilities": ["aios.wallpaper", "core.default"]
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' tauri: asset: http://asset.localhost blob: data:; media-src 'self' tauri: asset: http://asset.localhost blob: data:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' http://127.0.0.1:* ws://127.0.0.1:* ipc://localhost;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
